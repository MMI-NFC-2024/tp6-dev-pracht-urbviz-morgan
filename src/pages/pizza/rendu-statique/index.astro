---
import Layout from "../../../layouts/Layout.astro";
import pizza from "../../../assets/pizza.json";

function toSlug(value) {
  return value
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, "-")
    .replace(/(^-|-$)/g, "");
}

const locations = [...new Set(pizza.map((entry) => entry.location))];
const links = locations.map((location) => ({
  location,
  slug: toSlug(location),
}));
---

<Layout title="Pizza statique">
  <h1>Pizza statique</h1>
  <p>Pages generees statiquement pour chaque location.</p>

  <ul class="list-disc pl-5 space-y-1">
    {links.map(({ location, slug }) => (
      <li>
        <a class="text-blue-600 hover:underline" href={`/pizza/rendu-statique/${slug}`}>
          {location}
        </a>
      </li>
    ))}
  </ul>
</Layout>