---
import Layout from "../../../layouts/Layout.astro";
import PlotFigure from "../../../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import pizza from "../../../assets/pizza.json";

function toSlug(value) {
  return value
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, "-")
    .replace(/(^-|-$)/g, "");
}

export async function getStaticPaths() {
  const locations = [...new Set(pizza.map((entry) => entry.location))];
  return locations.map((location) => {
    const slug = location
      .toLowerCase()
      .replace(/[^a-z0-9]+/g, "-")
      .replace(/(^-|-$)/g, "");
    return {
      params: { location: slug },
      props: { location, slug },
    };
  });
}

interface Props {
  location: string;
  slug: string;
}

const props = Astro.props as Partial<Props>;
const { location: paramSlug = "" } = Astro.params;
const locationName = props.location ?? "";
const effectiveSlug = props.slug ?? paramSlug;

const filteredRecords = pizza
  .filter((entry) => {
    if (locationName) {
      return entry.location === locationName;
    }
    return toSlug(entry.location) === effectiveSlug;
  })
  .map((entry) => ({
    ...entry,
    dateObj: new Date(entry.date),
  }))
  .sort((a, b) => a.dateObj - b.dateObj);

const hasData = filteredRecords.length > 0;

const plotOptions = {
  grid: true,
  title: locationName
    ? `Temperature profile for ${locationName}`
    : "Temperature profile",
  marks: [
    Plot.line(filteredRecords, {
      x: "dateObj",
      y: "temp_max",
      stroke: "#ef4444",
      strokeWidth: 2,
      tip: true,
      curve: "catmull-rom",
    }),
    Plot.line(filteredRecords, {
      x: "dateObj",      y: "temp_min",
      stroke: "#3b82f6",
      strokeDash: "4,2",
      strokeWidth: 2,
      tip: true,
      curve: "catmull-rom",
    }),
  ],
  x: { label: "Date" },
  y: { label: "Temperature (C)" },
};

const precipitationOptions = {
  grid: true,
  title: locationName
    ? `Precipitation and wind for ${locationName}`
    : "Precipitation and wind",
  marks: [
    Plot.dot(filteredRecords, {
      x: "wind",
      y: "precipitation",
      fill: "weather",
      r: 5,
      fillOpacity: 0.7,
      tip: true,
    }),
  ],
  x: { label: "Wind (m/s)" },
  y: { label: "Precipitation (mm)" },
};
---

<Layout title={locationName ? `Pizza statique - ${locationName}` : "Pizza statique"}>
  <h1>{locationName ?? "Location inconnue"}</h1>

  {hasData && (
    <>
      <p>{filteredRecords.length} enregistrement(s) pour cette location.</p>
      <PlotFigure options={plotOptions} />
      <PlotFigure options={precipitationOptions} />
    </>
  )}

  {!hasData && (
    <p>Aucune donnee trouvee pour cette location.</p>
  )}

  <p class="mt-4">
    <a class="text-blue-600 hover:underline" href="/pizza/rendu-statique">
      Retour a la liste
    </a>
  </p>
</Layout>